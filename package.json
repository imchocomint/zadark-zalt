    "publish:chrome": "node tools/publish-api/chrome",
    "publish:edge": "node tools/publish-api/edge",
    "publish:firefox": "node publish-api/firefox",
    "macos:pkgbuild": "tools/macos/pkgbuild.sh",
    "macos:notarize": "tools/macos/notarize.sh",
    "macos:notarytool_log": "tools/macos/notarytool_log.sh",
    "macos:staple": "tools/macos/staple.sh"
  },
  "lint-staged": {
    "*.js": "yarn standard:fix"
  },
  "devDependencies": {
    "axios": "^1.2.2",
    "babel-eslint": "^10.1.0",
    "config-ini-parser": "^1.5.9",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.19",
    "form-data": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-minify": "^3.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-zip": "^5.1.0",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.0",
    "lint-staged": "^13.2.2",
    "merge-stream": "^2.0.0",
    "nodemon": "^2.0.15",
    "pkg": "^5.8.1",
    "qs": "^6.11.0",
    "resedit": "^2.0.0",
    "sass": "^1.49.8",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "@electron/asar": "^3.2.2",
    "chalk": "4.1.2",
    "cross-spawn": "^7.0.3",
    "del": "^6.0.0",
    "glob": "^7.2.0",
    "inquirer": "^8.0.0",
    "node-html-parser": "^5.2.0",
    "prompt-sync": "^4.2.0",
    "remove": "^0.1.5"
  },
  "standard": {
    "parser": "babel-eslint",
    "global": [
      "ZaDarkBrowser",
      "ZaDarkUtils",
      "$",
      "chrome",
      "browser",
      "bowser",
      "Popper",
      "tippy",
      "hotkeys",
      "Toastify",
      "WebFont",
      "localStorage",
      "MutationObserver",
      "DEBUG"
    ],
    "ignore": [
      "src/web/libs/**/*.js",
      "src/pc/assets/libs/**/*.js",
      "src/web/vendor/safari/ZaDark/**/*.js",
      "src/web/vendor/safari/ZaDark Extension/**/*.js",
      "src/web/vendor/safari/ZaDark.xcodeproj/**/*.js"
    ]
  },
  "engines": {
    "node": ">=14.15"
  }
}
