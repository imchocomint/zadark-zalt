{
  "manifest_version": 3,
  "name": "ZaDark â€“ Zalo Dark Mode",
  "version": "6.2",
  "description": "__MSG_appDesc__",
  "default_locale": "vi",
  "author": "NCDAi Studio",
  "homepage_url": "https://zadark.ncdaistudio.com",
  "icons": {
    "16": "images/zadark-icon-16.png",
    "32": "images/zadark-icon-32.png",
    "48": "images/zadark-icon-48.png",
    "128": "images/zadark-icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.zalo.me/*"
      ],
      "run_at": "document_end",
      "css": [
        "css/zadark-fonts.css",
        "css/zadark.css"
      ],
      "js": [
        "js/browser.js",
        "js/utils.js",
        "js/zadark.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://chat.zalo.me/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules_block_typing",
        "enabled": false,
        "path": "rules/rules_block_typing.json"
      },
      {
        "id": "rules_block_seen",
        "enabled": false,
        "path": "rules/rules_block_seen.json"
      },
      {
        "id": "rules_block_delivered",
        "enabled": false,
        "path": "rules/rules_block_delivered.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/zadark-icon-16.png",
      "32": "images/zadark-icon-32.png",
      "48": "images/zadark-icon-48.png",
      "128": "images/zadark-icon-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*"
      ],
      "matches": [
        "*://chat.zalo.me/*"
      ]
    }
  ]
}