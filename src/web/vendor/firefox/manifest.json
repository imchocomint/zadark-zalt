{
  "manifest_version": 2,
  "name": "ZaDark â€“ Zalo Dark Mode",
  "version": "8.5",
  "description": "__MSG_appDesc__",
  "default_locale": "vi",
  "author": "Quaric",
  "homepage_url": "https://zadark.quaric.com",
  "icons": {
    "16": "images/zadark-icon-16.png",
    "32": "images/zadark-icon-32.png",
    "48": "images/zadark-icon-48.png",
    "128": "images/zadark-icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.zalo.me/*"
      ],
      "run_at": "document_end",
      "css": [
        "css/zadark-fonts.min.css",
        "css/zadark-popup.min.css",
        "css/zadark.min.css"
      ],
      "js": [
        "libs/jquery.min.js",
        "libs/bowser-es5.min.js",
        "libs/popper.min.js",
        "js/browser.min.js",
        "js/utils.min.js",
        "js/zadark.min.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/service-worker.min.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "*://chat.zalo.me/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/zadark-icon-16.png",
      "32": "images/zadark-icon-32.png",
      "48": "images/zadark-icon-48.png",
      "128": "images/zadark-icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zadark-firefox@ncdaistudio.com"
    }
  },
  "web_accessible_resources": [
    "fonts/*",
    "images/*"
  ]
}