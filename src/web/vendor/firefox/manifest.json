{
  "manifest_version": 2,
  "name": "ZaDark â€“ Zalo Dark Mode",
  "version": "6.2",
  "description": "__MSG_appDesc__",
  "default_locale": "vi",
  "author": "NCDAi Studio",
  "homepage_url": "https://zadark.ncdaistudio.com",
  "icons": {
    "16": "images/zadark-icon-16.png",
    "32": "images/zadark-icon-32.png",
    "48": "images/zadark-icon-48.png",
    "128": "images/zadark-icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.zalo.me/*"
      ],
      "run_at": "document_end",
      "css": [
        "css/zadark-fonts.css",
        "css/zadark.css"
      ],
      "js": [
        "js/browser.js",
        "js/utils.js",
        "js/zadark.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "*://chat.zalo.me/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/zadark-icon-16.png",
      "32": "images/zadark-icon-32.png",
      "48": "images/zadark-icon-48.png",
      "128": "images/zadark-icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zadark-firefox@ncdaistudio.com"
    }
  },
  "web_accessible_resources": [
    "fonts/*"
  ]
}